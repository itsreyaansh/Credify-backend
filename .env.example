# Credify Backend Configuration

# Application
APP_NAME=Credify
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# MongoDB
MONGODB_URL=mongodb://root:password@localhost:27017
MONGODB_DB=credify

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-secret-key-min-32-characters-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRE_MINUTES=15
JWT_REFRESH_EXPIRE_DAYS=7

# Argon2 Password Hashing
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536
PASSWORD_MIN_LENGTH=8

# API
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
API_PREFIX=/api
RATE_LIMIT_PER_HOUR=100

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TIMEOUT=30

# Blockchain - Polygon Mumbai Testnet
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
CONTRACT_ADDRESS=0x...
WEB3_PRIVATE_KEY=your-private-key-here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@credify.ai
SMTP_FROM_NAME=Credify

# Payment - Razorpay
RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage
S3_BUCKET=
S3_REGION=us-east-1

# Features
ENABLE_2FA=true
ENABLE_BULK_UPLOAD=true
DEMO_MODE=false
